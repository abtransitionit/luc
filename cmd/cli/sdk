package cli

import (
	"github.com/abtransitionit/luc/internal/pipeline/gocli"
	"github.com/abtransitionit/luc/pkg/phase"
	"github.com/spf13/cobra"
)

// Description
var sdkSDesc = "Install the standard GO libraries and the cli go to start coding."
var sdkLDesc = sdkSDesc + ` xxx.`

// root Command
var sdkCmd = &cobra.Command{
	Use:   "sdk",
	Short: sdkSDesc,
	Long:  sdkLDesc,
	Run:   phase.SharedRun(gocli.Phases, sdkSDesc),
}

func init() {
	phase.SharedInit(sdkCmd)
}
